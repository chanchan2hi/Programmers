using System;

//프로그래머스 코테연습/코딩  트레이닝
//문제: 입문 -피자 나눠먹기 
//n이 주어질 때 모든 사람이 피자 한 조각 이상 먹기위해 필요한 피자 수 return 
namespace Programmers.Properties
{
    public class Solution
    { 
        public int solution(int n) 
        { 
            int answer = 0;
            int pizza = 7;

            if (n % pizza == 0) answer= n / pizza;
            else answer = n / pizza + 1;
            return answer;
        }
    }
}
